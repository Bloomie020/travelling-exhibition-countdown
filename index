<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Countdown Timer</title>
    <style>
        body {
            background: url('your-background.jpg') no-repeat center center fixed;
            background-size: cover;
            text-align: center;
            color: white;
            font-family: Arial, sans-serif;
        }
        #countdown {
            font-size: 50px;
            margin-top: 20%;
        }
    </style>
</head>
<body>

    <h1>Countdown to Event</h1>
    <div id="countdown"></div>

    <script>
        function startCountdown(targetDate) {
            function updateCountdown() {
                let now = new Date().getTime();
                let distance = targetDate - now;

                let days = Math.floor(distance / (1000 * 60 * 60 * 24));
                let hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                let seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById("countdown").innerHTML = 
                    `${days}d ${hours}h ${minutes}m ${seconds}s`;

                if (distance < 0) {
                    clearInterval(countdownInterval);
                    document.getElementById("countdown").innerHTML = "Event Started!";
                }
            }

            let countdownInterval = setInterval(updateCountdown, 1000);
            updateCountdown(); // Run once to avoid delay
        }

        // Set your target date here (Year, Month (0-11), Day, Hour, Minute)
        let eventDate = new Date(2025, 3, 30, 12, 0, 0).getTime(); 
        startCountdown(eventDate);
    </script>

</body>
</html>
